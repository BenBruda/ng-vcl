{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "core-js",
      "requirejs"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/aot",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
