{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "requirejs"
    ],
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "es2016.array.include"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/aot",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
